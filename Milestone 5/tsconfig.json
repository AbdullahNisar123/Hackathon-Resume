{
  "compilerOptions": {
    "outDir": "./dist",          // Output directory for compiled JavaScript files
    "rootDir": "./src",          // Root directory of TypeScript source files
    "target": "es6",             // Update target to ES6 (ES2015) or later
    "module": "commonjs",        // Module system to use
    "strict": true,              // Enable all strict type-checking options
    "esModuleInterop": true,     // Enable compatibility with ES module imports
    "skipLibCheck": true         // Skip type checking of declaration files
  },
  "include": [
    "src/**/*.ts"                // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules"               // Exclude node_modules from compilation
  ]
}
